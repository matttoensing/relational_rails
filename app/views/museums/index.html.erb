<h1>Museums</h1>
<br>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Free</th>
      <th>Entry Fee</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @museums.each do |museum| %>
      <tr>
        <td><h3><%= museum.name %></h3></td>
        <td><p><%= museum.free %></p></td>
        <td><p><%= museum.entry_fee %></p></td>
        <td><p><%= link_to museum.name, "/museums/#{museum.id}", class: "btn btn-info" %></p></td>
        <td><p><%= link_to "Edit: #{museum.name}", "/museums/#{museum.id}/edit", class: "btn btn-success" %></p></td>
        <td><p><%= link_to "Delete: #{museum.name}", "/museums/#{museum.id}", method: :delete, class: "btn btn-danger" %></p></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>
<p><%= link_to 'Create a new museum', '/museums/new', class: "btn btn-outline-primary" %></p>
