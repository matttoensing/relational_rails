<h1>Museums</h1>
<br>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Free</th>
      <th>Entry Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @museums.each do |museum| %>
      <tr>
        <td><%= museum.name %></td>
        <td><%= museum.free %></td>
        <td><%= museum.entry_fee %></td>
        <td><%= link_to museum.name, "/museums/#{museum.id}", class: "btn btn-info" %></td>
        <td><%= link_to "Edit: #{museum.name}", "/museums/#{museum.id}/edit", class: "btn btn-success" %></td>
        <td><%= button_to "Delete: #{museum.name}", "/museums/#{museum.id}", method: :delete , class: "btn btn-danger" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>

<p><%= link_to 'Create a new museum', '/museums/new' %></p>
