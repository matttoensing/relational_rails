<h1><%= "Edit #{@author.name}" %></h1><br>

<%= form_with url: "/authors/#{@author.id}", method: :patch, local: true do |form| %>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :published %>
    <%= form.text_field :published %>
  </p>

  <p>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </p>

  <div class="actions">
  <p><%= form.submit "Submit", class: 'btn btn-secondary' %> </p>
  </div>
<% end %>
