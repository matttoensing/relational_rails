<h1>Books Page</h1>

<% @books.each do |book| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><h2><%= book.title %></h2></h5>
<h6 class="card-subtitle mb-2 text-muted">Pages: <%= book.pages %></h6>
<h6 class="card-subtitle mb-2 text-muted">Awards: <%= book.awards %></h6>
<a href="#" class="card-link"><%= link_to "View: #{book.title}", "/books/#{book.id}" %></a><br>
<a href="#" class="card-link"><%= link_to "Edit: #{book.title}", "/books/#{book.id}/edit" %></a>
</div>
</div><br>
<% end %>
