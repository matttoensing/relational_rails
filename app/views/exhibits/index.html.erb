<h1>Exhibits Page</h1>

<% @exhibits.each do |exhibit| %>
<h2><%= exhibit.title %></h2>
<p><%= exhibit.person_limit %></p>
<p>Photos: <%= exhibit.photos %></p>
<p>Flash: <%= exhibit.flash %></p>
<p>
<%= link_to exhibit.title, "/exhibits/#{exhibit.id}" %>
</p>
<p>
<%= link_to "Edit: #{exhibit.title}", "/exhibits/#{exhibit.id}/edit" %>
</p>
<p>
  <%= button_to "Delete: #{exhibit.title}", "/exhibits/#{exhibit.id}", method: :delete %>
</p>
<% end %>
