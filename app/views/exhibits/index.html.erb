<h1>Exhibits Page</h1>
<br>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Free</th>
      <th>Entry Fee</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibits.each do |exhibit| %>
      <tr>
        <td><h3><%= exhibit.title %></h3></td>
        <td><p>Person limit: <%= exhibit.person_limit %></p></td>
        <td><p>Photos: <%= exhibit.photos %></p></td>
        <td><p>Flash: <%= exhibit.flash %></p></td>
        <td><p><%= link_to exhibit.title, "/exhibits/#{exhibit.id}", class: "btn btn-info" %></p></td>
        <td><p><%= link_to "Edit: #{exhibit.title}", "/exhibits/#{exhibit.id}/edit", class: "btn btn-success"  %></p></td>
        <td><p><%= link_to "Delete: #{exhibit.title}", "/exhibits/#{exhibit.id}", method: :delete, class: "btn btn-danger" %></p></td>
      </tr>
      <% end %>
  </tbody>
</table>
