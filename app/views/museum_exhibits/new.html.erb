<%= form_tag("/museums/#{@museum.id}/exhibits", method: "post") do %>
<%= label_tag  "title_id", "Title" %>
<%= text_field_tag(:title) %> <br>
<%= label_tag  "person_limit_id", "Person Limit" %>
<%= text_field_tag(:person_limit) %> <br>
<%= label_tag  "photos_id", "Photos Allowed" %>
<%= check_box_tag(:photos) %> <br>
<%= label_tag  "flash_id", "Flash Allowed" %>
<%= check_box_tag(:flash) %> <br>
<%= submit_tag("Submit") %>
<% end %>
