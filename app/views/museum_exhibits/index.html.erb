<h1>Museum Exhibits Page</h1>
<br>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Free</th>
      <th>Entry Fee</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibits.each do |exhibit| %>
      <tr>
        <td><h3><%= exhibit.title %></h3></td>
        <td><p>Person limit: <%= exhibit.person_limit %></p></td>
        <td><p>Photos: <%= exhibit.photos %></p></td>
        <td><p>Flash: <%= exhibit.flash %></p></td>
        <td><p><%= link_to "Edit: #{exhibit.title}", "/exhibits/#{exhibit.id}/edit" %></p></td>
        </tr>
        <% end %>
  </tbody>
</table>
<%= link_to "Create New Exhibit", "/museums/#{@museum.id}/exhibits/new", class: "btn btn-outline-primary" %>
<br>
<br>
<%= link_to "Sort by Title", "/museums/#{@museum.id}/exhibits?sort=title", class: "btn btn-outline-secondary" %>
<br>
<br>
<%= form_tag("/museums/#{@museum.id}/exhibits?person_limit=num", :method => :get) do %>
<form class="form-inline">
  <div class="form-group mb-2">
    <label for="filter_pages" class="sr-only"><%= label_tag(:q, "Filter Exhibits by Person Limit") %></label>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <label for="filter_pages" class="sr-only"></label>
    <%= number_field_tag(:person_limit, params[:filter]) %> <br>
  </div>
    <%= submit_tag("Filter") %>
</form>
<% end %>
